    <form action="/posts/<%= post._id %>/comments/" method="POST">
    <div class="row mb-3">
        <div class="col-2">
            <div>
                <label for="name" class="col-form-label visually-hidden"></label>
                <input type="text" name="comment[name]" id="name" class="form-control" placeholder="Name" aria-label="Name">
            </div>
            <div>
                <label for="password" class="col-form-label visually-hidden"></label>
                <input type="password" name="comment[password]" id="password" class="form-control my-2" placeholder="Password"
                    aria-label="Password">
            </div>
        </div>
        <div class="col-10">
            <label for="commentTextArea" class="form-label visually-hidden"></label>
            <textarea class="form-control" name="comment[comment]" id="commentTextArea" rows="3" placeholder="Comment"></textarea>
        </div>
        <div class="row justify-content-end">
            <div class="col-1">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
    </form>