<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/show.css">

<div class="row justify-content-center">
    <!-- Post Section -->
    <div class="col-lg-8 mb-5">
        <h1 class="mb-3"><%= post.title %> </h1>
        <p class="text-muted">category: <%= post.category %> </p>
        <p> <%- post.html %> </p>
        <a class="btn btn-sm btn-secondary" href="/posts">Back</a>
        <% if (currentUser) { %>
        <a href="/posts/<%= post._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-danger btn-sm">Delete</button>
        </form>
        <% } %>
    </div>
    <!-- Comment Section -->
    <div class="col-lg-8 mb-3">
        <h3>Comments</h3>
        <hr>
        <ul class="list-group list-group-flush">
            <% for( let comment of post.comments ) { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-11">
                        <strong><%= comment.name %> </strong>
                        <div>
                            <%- comment.convertedComment %>
                        </div>
                    </div>
                    <div class="dropdown col-1">
                        <button class="btn btn-sm" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                <path
                                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                            </svg>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li>
                                <a href="#" class="dropdown-item"
                                    onclick="toggler('editForm<%= comment._id %>')">Edit</a>
                            </li>
                            <li>
                                <button type="button" class="dropdown-item" data-bs-toggle="modal"
                                    data-bs-target="#deleteCommentModel<%= comment._id %>">
                                    Delete
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </li>
            <li class="list-group-item d-none" id="editForm<%= comment._id %>">
                <form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PUT" method="POST"
                    class="validated-form" novalidate>
                    <div class="row mb-3">
                        <div class="col-2">
                            <div>
                                <label for="name<%= comment._id %>" class="col-form-label visually-hidden"></label>
                                <input type="text" name="comment[name]" id="name<%= comment._id %>" class="form-control"
                                    placeholder="Name" aria-label="Name" value="<%= comment.name %>" required>
                                <div class="valid-feedback">
                                </div>
                            </div>
                            <div>
                                <label for="password<%= comment._id %>" class="col-form-label visually-hidden"></label>
                                <input type="password" name="comment[password]" id="password<%= comment._id %>"
                                    class="form-control my-2" placeholder="Password" aria-label="Password" required>
                                <div class="valid-feedback">
                                </div>
                            </div>
                        </div>
                        <div class="col-10">
                            <label for="commentTextArea<%= comment._id %>" class="form-label visually-hidden"></label>
                            <textarea class="form-control" name="comment[comment]"
                                id="commentTextArea<%= comment._id %>" rows="3" placeholder="Comment"
                                required><%= comment.comment %></textarea>
                            <div class="valid-feedback">
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-1">
                                <button class="btn btn-info btn-sm">Edit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </li>

            <div class="modal fade" id="deleteCommentModel<%= comment._id %>" tabindex="-1"
                aria-labelledby="deleteCommentModel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete comment?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE"
                                method="POST" class="validated-form" novalidate>
                                <div class="mb-3">
                                    <label for="commentPassword" class="col-form-label">Please provide the password to
                                        delete the comment
                                    </label>
                                    <input type="password" class="form-control" id="commentPassword"
                                        name="comment[password]" required>
                                    <div class="valid-feedback">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>
        </ul>
    </div>
    <div class="col-lg-8 mb-3">
        <form action="/posts/<%= post._id %>/comments/" method="POST" class="validated-form" novalidate>
            <div class="row mb-3">
                <div class="col-2">
                    <div>
                        <label for="name" class="col-form-label visually-hidden"></label>
                        <input type="text" name="comment[name]" id="name" class="form-control" placeholder="Name"
                            aria-label="Name" required>
                        <div class="valid-feedback">
                        </div>

                    </div>
                    <div>
                        <label for="password" class="col-form-label visually-hidden"></label>
                        <input type="password" name="comment[password]" id="password" class="form-control my-2"
                            placeholder="Password" aria-label="Password" required>
                        <div class="valid-feedback">
                        </div>

                    </div>
                </div>
                <div class="col-10">
                    <label for="commentTextArea" class="form-label visually-hidden"></label>
                    <textarea class="form-control" name="comment[comment]" id="commentTextArea" rows="3"
                        placeholder="Comment" required></textarea>
                    <div class="valid-feedback">
                    </div>

                </div>
                <div class="row justify-content-end">
                    <div class="col-1">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function toggler(divId) {
        const element = document.getElementById(divId);
        element.classList.toggle("d-none");
    }
</script>